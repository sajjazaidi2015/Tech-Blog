
<form id="newBlog-form">
    <input id="post-id" type="hidden" value="{{id}}">
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Title</label>
        <input type="text" value="{{ title }}" class="form-control" id="post-title" placeholder="Enter your title" required>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Content</label>
        <input type="text" value="{{ content }}" class="form-control" id="post-content" placeholder="Enter your content" required>
    </div>
    <div class="mb-3">
        {{#if id}}
        <button id="update-post" type="submit" class="btn btn-primary">Update</button>
        <button id="delete-post" type="submit" class="btn btn-danger">Delete</button>
        {{else}}
        <button id="new-post" type="submit" class="btn btn-primary">Save</button>
        {{/if}}
    </div>
</form>